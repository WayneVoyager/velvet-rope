{
  "manifest_version": 3,
  "name": "Velvet Rope",
  "version": "1.0.0",
  "description": "Limit your daily visits to distracting websites. Access is a privilege.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "pages/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
